<div class="row">
<div class="col-sm-5">

<%= form_for(@example) do |f| %>
  
  <% if @example.errors.any? %>

  <div class="alert alert-danger" role="alert">
    <div id="error_explanation">
      <ul>
      <% @example.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        
      <% end %>
      </ul>
      </div>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <div class="form-group">
  <%= f.label :folder_id %><br>
  <%= f.collection_select(:folder_id, Folder.where(user_id: current_user.id), :id, :name, {}, class: 'form-control') %>
  </div>
  <div class="form-group">
    <%= f.label :arquivo %><br>
    <%= f.file_field :my_file %>
  </div>
  <div class="form-group">
      <%= f.label :private %>
      <%= f.check_box :private %>
  </div>

    <%= f.submit class: "btn btn-success" %>
  
<% end %>
</div>
</div>